FROM monroe/base

MAINTAINER tomasz.rozensztrauch@radytek.com

RUN echo "deb http://ftp.debian.org/debian jessie-backports main" >> /etc/apt/sources.list

RUN apt-get update && apt-get install -y \
    git \
    vim \
    build-essential \
    cmake \
    libuv1-dev \
    libldns-dev \
    libjansson-dev \
    libmnl-dev \
    libsctp-dev \
    libssl-dev \
    zlib1g-dev \
    libbz2-dev \
    libreadline-dev \
    libsqlite3-dev \
    llvm \
    libncurses5-dev \
    libncursesw5-dev \
    xz-utils \
    tk-dev \
    && apt-get clean

WORKDIR /opt/celerway

#RUN git clone https://github.com/pyenv/pyenv.git ~/.pyenv
#RUN echo 'export PYENV_ROOT="$HOME/.pyenv"' >> ~/.bashrc
#RUN echo 'export PATH="$PYENV_ROOT/bin:$PATH"' >> ~/.bashrc
#RUN echo 'eval "$(pyenv init -)"' >> ~/.bashrc
#RUN export PYENV_ROOT="$HOME/.pyenv"; export PATH="$PYENV_ROOT/bin:$PATH"; eval "$(pyenv init -)"; pyenv install 3.5.2; pip3.5 netifaces; pip3.5 aiohttp

#RUN curl -L https://raw.githubusercontent.com/yyuu/pyenv-installer/master/bin/pyenv-installer | bash
#RUN export PATH="/root/.pyenv/bin:$PATH"; eval "$(pyenv init -)"; eval "$(pyenv virtualenv-init -)"; pyenv install 3.5.2; pyenv global system 3.5.2
#RUN pip3.5 netifaces
#RUN pip3.5 aiohttp

RUN wget https://www.python.org/ftp/python/3.5.2/Python-3.5.2.tgz
RUN tar xvf Python-3.5.2.tgz
RUN cd Python-3.5.2 && ./configure --enable-optimizations && make -j8 && make altinstall
RUN pip3.5 install netifaces && pip3.5 install aiohttp

RUN git clone https://github.com/NEAT-project/neat.git
WORKDIR /opt/celerway/neat/build
RUN cmake ..
RUN cmake --build .
RUN make install

COPY files/* /opt/monroe/

ENTRYPOINT ["dumb-init", "--", "/bin/bash", "/opt/monroe/myscript.sh"]
